{
  "name": "@fireadmin/core",
  "version": "0.0.1",
  "main": "dist/index.node.cjs.js",
  "browser": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "./types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf lib coverage",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "build": "rollup -c rollup.config.js src/index.ts",
    "build:ts": "tsc && tsc -m es6 --outDir lib-esm",
    "lint": "eslint source/**",
    "lint:fix": "npm run lint -- --fix",
    "test:cov": "istanbul cover  $(npm bin)/_mocha ./test/unit/**",
    "build:lib": "babel src --out-dir lib",
    "watch:lib": "npm run build:lib -- --watch",
    "watch:es": "npm run build:es -- --watch",
    "watch": "npm run watch:lib",
    "prepublish": "npm run clean && npm run build",
    "pre-push": "npm run lint"
  },
  "repository": {
    "directory": "packages/core",
    "type": "git",
    "url": "https://github.com/prescottprue/fireadmin.git"
  },
  "author": "prescottprue",
  "contributors": [
    {
      "name": "prescottprue",
      "email": "sprue.dev@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prescottprue/fireadmin/issues"
  },
  "homepage": "https://github.com/prescottprue/fireadmin",
  "dependencies": {
    "firebase": "^5.8.6",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "rimraf": "^2.5.4",
    "rollup": "^1.6.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-typescript2": "^0.20.0",
    "tslib": "^1.9.3",
    "tslint": "5.13.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-etc": "1.3.2",
    "typedoc": "0.14.2",
    "typescript": "^3.3.0",
    "typescript-tslint-plugin": "0.3.1"
  }
}
