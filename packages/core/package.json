{
  "name": "@fireadmin/core",
  "version": "0.0.1",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "es2015": "./lib-esm/index.js",
  "typings": "./index.d.ts",
  "files": [
    "dist",
    "lib",
    "lib-esm",
    "./index.d.ts"
  ],
  "scripts": {
    "clean": "rimraf lib lib-esm coverage",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "build": "tsc && tsc -m es6 --outDir lib-esm && npm run build:defs",
    "build:ts": "tsc && tsc -m es6 --outDir lib-esm",
    "build:defs": "tsc --declaration --outFile index.d.ts --emitDeclarationOnly",
    "lint": "eslint src/**",
    "lint:fix": "npm run lint -- --fix",
    "test": "TS_NODE_CACHE=NO TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc --reporter lcovonly -- mocha test/unit/**/*.spec.ts --opts ./test/mocha.opts",
    "test:cov": "istanbul cover  $(npm bin)/_mocha ./test/unit/**",
    "build:lib": "babel src --out-dir lib",
    "watch:lib": "npm run build:lib -- --watch",
    "watch:es": "npm run build:es -- --watch",
    "watch": "npm run watch:lib",
    "prepublish": "npm run clean && npm run build",
    "pre-push": "npm run lint"
  },
  "repository": {
    "directory": "packages/core",
    "type": "git",
    "url": "https://github.com/prescottprue/fireadmin.git"
  },
  "author": "prescottprue",
  "contributors": [
    {
      "name": "prescottprue",
      "email": "sprue.dev@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prescottprue/fireadmin/issues"
  },
  "homepage": "https://github.com/prescottprue/fireadmin",
  "dependencies": {
    "ajv": "^6.10.0",
    "firebase": "^5.8.6",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "rimraf": "^2.5.4",
    "ts-node": "^8.0.3",
    "tslib": "^1.9.3",
    "tslint": "5.13.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-etc": "1.3.2",
    "typedoc": "0.14.2",
    "typescript": "^3.4.1",
    "typescript-tslint-plugin": "0.3.1"
  }
}
