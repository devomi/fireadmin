{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "rootDir": "./src",
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "declarationDir": "types",
    "resolveJsonModule": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}